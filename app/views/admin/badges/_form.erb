<%= form_with model: [:admin, @badge] do |form| %>

  <%= render 'shared/form_errors', resource: @badge %>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :unique %>
    <%= form.check_box :unique %>
  </p>

  <p>
    <%= form.label 'Rule' %>
    <%= form.select('rule', [['Category', 1], ['Level', 2], ['First', 3]], { include_blank: true }, class: "rule-type") %>
  </p>

  <p class="rule-attribute hide">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  </p>

  <p class="rule-attribute hide">
    <%= form.label :level %>
    <%= form.number_field :level %>
  </p>

  <p class="rule-attribute hide">
    <%= form.label :test_id %>
    <%= form.collection_select :test_id, Test.all, :id, :title, prompt: true %>
  </p>

  <p><%= form.submit %></p>
<% end %>

<p> <%= link_to_root %></p>