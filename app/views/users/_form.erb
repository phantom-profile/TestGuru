<%= form_with model: @user do |form| %>

  <%= render 'shared/form_errors', resource: @user %>

  <p>
    <%= form.label :username %>
    <%= form.text_field :username, id: :user_username %>
  </p>

  <p>
    <%= form.label :firstname %>
    <%= form.text_field :firstname, id: :user_firstname %>
  </p>

  <p>
    <%= form.label :lastname %>
    <%= form.text_field :lastname, id: :user_lastname %>
  </p>

  <p>
    <%= form.label :email %>
    <%= form.email_field :email, id: :user_email %>
  </p>

  <p>
    <%= form.label :password %>
    <%= form.password_field :password, id: :user_password %>
  </p>

  <p>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, id: :user_password_confirmation %>
  </p>

  <p><%= form.submit %></p>
<% end %>